#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile'
            dir './docker'
        }
    }
    stages {
        stage('Test') {
            steps {
                sh '''
                    bash buildCalc.sh
                    ./build/bin/CalculatorTests
                '''
            }
        }
    }
}